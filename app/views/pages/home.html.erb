<% if signed_in? %>
  <table class="front", summary="for signed-in user">
    <tr>
      <td class="main">
        <h1 class="micropost">What's up</h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
      </td>
    </tr>
  </table>
<% else %>
  <h1>Sample App</h1>
  <p>This is the home page for the
  <a href="http://railstutorail.org">Ruby on Rails tutorial</a>
  sample application
  </p>
  <% if current_user.nil? %>
    <%= link_to "Sign up now!", signup_path, :class => "signup_button round"%>
  <% end %>
<% end %>
